# 服务器配置
API_PORT=3000
NODE_ENV=development

# 小红书API配置
XHS_API_BASE=https://www.xiaohongshu.com
XHS_REQUEST_TIMEOUT=10000

# 安全配置
JWT_SECRET=your-jwt-secret-key-here
REQUEST_SECRET=your-request-secret-key

# 文件上传配置
MAX_FILE_SIZE=50MB
UPLOAD_PATH=./uploads

# 代理配置（可选）
# PROXY_HOST=
# PROXY_PORT=
# PROXY_USERNAME=
# PROXY_PASSWORD=

# 数据库配置（如果需要）
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=xhs_watermark
# DB_USER=postgres
# DB_PASSWORD=password

# Redis配置（如果需要缓存）
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/app.log